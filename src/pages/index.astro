---
import Layout from '../layouts/Layout.astro';
import Pill from "../components/Pill.astro";
import Skills from "../components/Skills.astro";
import Socials from "../components/Socials.astro";
---

<Layout>
	<main class="h-full bg-gradient-to-r from-pink-200 to-purple-200">
		<section class="flex justify-center items-center mx-auto gap-8 px-4 pt-12 md:pt-[25vh] pb-12">
			<div class="flex flex-col gap-4">
				<div class="flex flex-col gap-1">
					<h1 class="font-bold">
						<span class="text-4xl md:text-6xl font-bold">
							Hello, my name is <span class="text-pink-900">Oskar Karpi≈Ñski</span>
						</span>
					</h1>
				</div>

				<h2 class="text-2xl md:text-3xl">
					I am a Creative Developer living in Poland
				</h2>

				<div class="flex flex-col md:flex-row gap-4">
					<Pill icon="code">
						Full-stack Developer
					</Pill>

					<Pill icon="server">
						DevOps Engineer
					</Pill>

					<Pill icon="server">
						Cryptography Specialist
					</Pill>
				</div>
			</div>
		</section>

		<Skills />

		<Socials />
	</main>
</Layout>
